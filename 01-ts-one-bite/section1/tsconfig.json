{
  "include": ["src"],
  "compilerOptions": {
    "target": "ESNext", // 구형 브라우저에서 어플리케이션 동작시킬때 사용하는 옵션 (크로스 브라우징??)
    "module": "ESNext", // 구형 브라우저에서 어플리케이션 동작시킬때 사용하는 옵션 (크로스 브라우징??)
    "outDir": "dist", // 컴파일한 js파일이 생성될 경로
    "strict": true, // 엄격한 타입 검사
    "moduleDetection": "force", // 독립된 격리된 모듈로 설정
    "skipLibCheck": true
  }
}
